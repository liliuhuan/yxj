<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
   <TextView
       android:id="@+id/lessions_sequence_tv"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_centerVertical="true"
       android:includeFontPadding="false"
       android:textSize="@dimen/sp_16"
       android:textColor="@color/text_color_66"/>
  <TextView
      android:id="@+id/lessions_status_tv"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignParentRight="true"
      android:layout_centerVertical="true"
      android:layout_marginTop="@dimen/sp_16"
      android:layout_marginBottom="@dimen/sp_16"
      android:includeFontPadding="false"
      android:paddingTop="3dp"
      android:paddingBottom="3dp"
      android:paddingLeft="8dp"
      android:paddingRight="8dp"
      android:textSize="@dimen/sp_14"
      android:textColor="@color/text_color_33"/>
  <TextView
      android:id="@+id/lessions_time_tv"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_toLeftOf="@+id/lessions_status_tv"
      android:layout_toRightOf="@+id/lessions_sequence_tv"
      android:layout_centerVertical="true"
      android:includeFontPadding="false"
      android:gravity="left"
      android:paddingLeft="@dimen/sp_16"
      android:paddingRight="@dimen/sp_16"
      android:textSize="@dimen/sp_16"
      android:textColor="@color/text_color_33"/>
</RelativeLayout>