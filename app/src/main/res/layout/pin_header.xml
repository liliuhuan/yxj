<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/pin_header"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="48dp">
        <TextView
            android:id="@+id/near_lesson"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="@string/good_lesson"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:textSize="14sp"
            android:padding="8dp"
            android:singleLine="true"
            android:ellipsize="end"
            android:drawableRight="@drawable/new_drop_dwon"
            android:textColor="@color/text_color_66"
            android:layout_marginLeft="20dp"/>
        <TextView
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            android:background="@color/gray_ee"/>
        <TextView
            android:id="@+id/face_year"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="全年龄"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:textSize="14sp"
            android:padding="8dp"
            android:singleLine="true"
            android:ellipsize="end"
            android:drawableRight="@drawable/new_drop_dwon"
            android:textColor="@color/text_color_66"
            android:layout_marginLeft="20dp"/>
        <TextView
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            android:background="@color/gray_ee"/>
        <TextView
            android:id="@+id/course_type"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="@string/general_categories"
            android:singleLine="true"
            android:ellipsize="end"
            android:textSize="14sp"
            android:padding="8dp"
            android:textColor="@color/text_color_66"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:drawableRight="@drawable/new_drop_dwon"
            android:layout_marginLeft="20dp"/>
</LinearLayout>