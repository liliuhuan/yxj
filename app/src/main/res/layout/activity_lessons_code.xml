<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/list_bg">
  <include layout="@layout/bar_layout"
      android:id="@+id/title_lay"></include>
  <ScrollView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_below="@+id/title_lay"
      android:scrollbars="none">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/point"
        android:background="@color/white"
        android:orientation="vertical">
      <View layout="@layout/full_cut_off"
          style="@style/cut_off"/>
      <RelativeLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:paddingLeft="@dimen/sp_16"
          android:paddingRight="@dimen/sp_16"
          android:paddingTop="@dimen/point"
          android:paddingBottom="@dimen/point">
        <ImageView
            android:id="@+id/lessions_headimg_iv"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/lessions_headimg_iv"
            android:paddingLeft="@dimen/sp_16"
            android:paddingRight="@dimen/sp_16"
            android:layout_centerVertical="true"
            android:orientation="vertical">
          <TextView
              android:id="@+id/lessions_name_tv"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:textSize="14sp"
              android:textColor="@color/text_color_33"/>
          <TextView
              android:id="@+id/lessions_coursename_tv"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginTop="2dp"
              android:textSize="16sp"
              android:textColor="@color/text_color_33"/>
        </LinearLayout>

      </RelativeLayout>
      <View layout="@layout/full_cut_off"
          style="@style/cut_off"/>
      <RelativeLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:paddingLeft="@dimen/sp_16"
          android:paddingRight="@dimen/sp_16">
        <TextView
            android:id="@+id/lessions_sequence_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:includeFontPadding="false"
            android:textSize="@dimen/sp_16"
            android:textColor="@color/text_color_66"/>
        <TextView
            android:id="@+id/lessions_status_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginTop="@dimen/sp_16"
            android:layout_marginBottom="@dimen/sp_16"
            android:includeFontPadding="false"
            android:paddingTop="3dp"
            android:paddingBottom="3dp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:textSize="@dimen/sp_14"
            android:text="今天"
            android:background="@drawable/rectangle_round_corner8_red"
            android:textColor="@color/white"/>
        <TextView
            android:id="@+id/lessions_time_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/lessions_status_tv"
            android:layout_toRightOf="@+id/lessions_sequence_tv"
            android:layout_centerVertical="true"
            android:includeFontPadding="false"
            android:gravity="left"
            android:text=""
            android:paddingLeft="@dimen/sp_16"
            android:paddingRight="@dimen/sp_16"
            android:textSize="@dimen/sp_16"
            android:textColor="@color/text_color_33"/>
      </RelativeLayout>
      <View layout="@layout/full_cut_off"
          style="@style/cut_off"/>
      <TextView
          android:id="@+id/tv_teacher_des"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="32dp"
          android:gravity="center_horizontal"
          android:textSize="@dimen/sp_16"
          android:textColor="@color/text_color_33"
          android:text="@string/scan_qr_code_title_txt"/>
      <ImageView
          android:id="@+id/qr_code_iv"
          android:layout_width="250dp"
          android:layout_height="250dp"
          android:layout_gravity="center_horizontal"/>
      <ImageView
          android:id="@+id/qr_code_no"
          android:layout_width="match_parent"
          android:layout_height="250dp"
          android:visibility="gone"
          android:layout_marginTop="32dp"
          android:layout_gravity="center_horizontal"/>
      <View layout="@layout/full_cut_off"
          style="@style/cut_off"
          android:layout_marginTop="24dp"/>
      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:paddingLeft="@dimen/sp_16"
          android:paddingRight="@dimen/sp_16"
          android:orientation="vertical"
          android:paddingBottom="@dimen/sp_16"
          android:paddingTop="@dimen/sp_16"
          android:layout_below="@+id/mine_lessions_list_lv">
        <TextView
            android:id="@+id/lessions_classname_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="@color/text_color_66"/>
        <TextView
            android:id="@+id/lessions_address_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="@color/text_color_66"/>
        <TextView
            android:id="@+id/lessions_duration_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="@color/text_color_66"/>
        <TextView
            android:id="@+id/lessions_student_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="@color/text_color_66"/>
        <TextView
            android:id="@+id/lessions_attention_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="@color/text_color_66"/>
      </LinearLayout>
    </LinearLayout>
  </ScrollView>
  <include layout="@layout/wait_progressbar"/>

</RelativeLayout>