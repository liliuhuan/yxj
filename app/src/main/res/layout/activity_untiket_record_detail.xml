<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_untiket_record_detail"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/list_bg"
    tools:context="com.bolooo.studyhomeparents.activty.mine.UntiketRecordDetailActivity">
   <include layout="@layout/bar_layout"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@color/white"
        android:padding="@dimen/dp_16"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_16"
            android:text="@string/unticket_num"/>
        <TextView
            android:id="@+id/untiket_nums"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:textColor="@color/theme_blue"
            android:textSize="@dimen/sp_18"
            android:paddingRight="@dimen/dp_10"
            android:textStyle="bold"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@color/white"
        android:paddingLeft="@dimen/dp_16"
        android:layout_marginTop="1dp"
        android:paddingTop="@dimen/dp_8"
        android:paddingBottom="@dimen/dp_8"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/buy_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_14"
            android:text="@string/buy_type"/>
        <TextView
            android:id="@+id/buy_type_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/buy_type"
            android:layout_marginLeft="@dimen/dp_8"
            android:textSize="@dimen/sp_14"
            android:textColor="@color/text_color_55"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@color/white"
        android:paddingLeft="@dimen/dp_16"
        android:paddingTop="@dimen/dp_8"
        android:paddingBottom="@dimen/dp_8"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/buy_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_14"
            android:text="@string/buy_time"/>
        <TextView
            android:id="@+id/buy_time_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/buy_time"
            android:layout_marginLeft="@dimen/dp_8"
            android:textSize="@dimen/sp_14"
            android:textColor="@color/text_color_55"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@color/white"
        android:paddingLeft="@dimen/dp_16"
        android:paddingTop="@dimen/dp_8"
        android:paddingBottom="@dimen/dp_8"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/buy_project"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_14"
            android:text="@string/buy_project"/>
        <TextView
            android:id="@+id/buy_project_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/buy_project"
            android:layout_marginLeft="@dimen/dp_8"
            android:textSize="@dimen/sp_14"
            android:textColor="@color/text_color_55"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@color/white"
        android:paddingLeft="@dimen/dp_16"
        android:paddingTop="@dimen/dp_8"
        android:paddingBottom="@dimen/dp_8"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/buy_order"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_14"
            android:text="@string/buy_order_number"/>
        <TextView
            android:id="@+id/buy_order_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/buy_order"
            android:layout_marginLeft="@dimen/dp_8"
            android:textSize="@dimen/sp_14"
            android:textColor="@color/text_color_55"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@color/white"
        android:paddingLeft="@dimen/dp_16"
        android:paddingTop="@dimen/dp_8"
        android:paddingBottom="@dimen/dp_8"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/apply_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_14"
            android:text="@string/apply_money_number"/>
        <TextView
            android:id="@+id/apply_money_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/apply_money"
            android:layout_marginLeft="@dimen/dp_8"
            android:textSize="@dimen/sp_14"
            android:textColor="@color/text_color_55"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@color/white"
        android:paddingLeft="@dimen/dp_16"
        android:paddingTop="@dimen/dp_8"
        android:paddingBottom="@dimen/dp_8"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/user_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_14"
            android:text="@string/user_score"/>
        <TextView
            android:id="@+id/user_score_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/user_score"
            android:layout_marginLeft="@dimen/dp_8"
            android:textSize="@dimen/sp_14"
            android:textColor="@color/text_color_55"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@color/white"
        android:paddingLeft="@dimen/dp_16"
        android:paddingTop="@dimen/dp_8"
        android:paddingBottom="@dimen/dp_8"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/untiket_canuse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_14"
            android:text="@string/untiket_canuse"/>
        <TextView
            android:id="@+id/untiket_canuse_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/untiket_canuse"
            android:layout_marginLeft="@dimen/dp_8"
            android:textSize="@dimen/sp_14"
            android:textColor="@color/text_color_55"
            />
    </RelativeLayout>
</LinearLayout>
