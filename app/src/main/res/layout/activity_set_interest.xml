<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_set_interest"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/new_login_bg">
    <include
        layout="@layout/bar_layout"
        android:id="@+id/title_bar">
    </include>
    <ImageView
        android:src="@drawable/new_goal_title"
        android:layout_width="match_parent"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="40dp"
        android:layout_height="100dp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">
        <RelativeLayout
            android:id="@+id/viewPagerContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clipChildren="false"
            android:gravity="center">
            <android.support.v4.view.ViewPager
                android:id="@+id/viewpager"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_centerInParent="true"
                android:clipChildren="false" >
            </android.support.v4.view.ViewPager>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="30dp"
            android:layout_gravity="bottom|center_horizontal"
            android:layout_alignParentBottom="true">
            <LinearLayout
                android:id="@+id/ll_indicator"
                android:layout_width="wrap_content"
                android:orientation="horizontal"
                android:layout_height="wrap_content">
            </LinearLayout>
            <View
                android:id="@+id/pointed"
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:layout_marginBottom="8dp"
                android:visibility="gone"
                android:background="@drawable/new_indicator_select"
                />
        </RelativeLayout>
    </LinearLayout>
    <Button
            android:id="@+id/choice_ok"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_marginBottom="40dp"
            android:layout_marginTop="-40dp"
            android:layout_gravity="bottom|center_horizontal"
            android:gravity="center"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:background="@color/setting_expectations"
            android:text="保存选择"
            />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_gravity="bottom|center_horizontal"
        />
</LinearLayout>
