<?xml version="1.0" encoding="utf-8"?>
<com.bolooo.studyhomeparents.views.MySwipeRefreshlayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/myrefresh" >
    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true">
        <android.support.design.widget.AppBarLayout
            android:id="@+id/app_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fitsSystemWindows="true"
            android:background="@drawable/bg_bitmap"
            android:paddingBottom="-150dp">
            <android.support.design.widget.CollapsingToolbarLayout
                android:id="@+id/toolbar_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fitsSystemWindows="true"
                app:contentScrim="@color/bg_color"
                app:layout_scrollFlags="scroll|exitUntilCollapsed">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_marginTop="60dp"
                    android:layout_height="wrap_content">
                    <include
                        android:id="@+id/layout_btn"
                        layout="@layout/teacher_detail_info"/>
                </LinearLayout>
                <android.support.v7.widget.Toolbar
                    android:id="@+id/toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/navigation_height"
                    app:contentInsetLeft="0dp"
                    app:contentInsetStart="0dp"
                    app:layout_collapseMode="pin">
                        <include layout="@layout/teacher_title_bar"/>
                </android.support.v7.widget.Toolbar>
             </android.support.design.widget.CollapsingToolbarLayout>
            <include layout="@layout/teacher_info_layout"/>
        </android.support.design.widget.AppBarLayout>
        <com.bolooo.studyhomeparents.views.NoScollViewPager
            android:id="@+id/viewpager"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="-151dp"
            android:paddingBottom="48dp"
            app:layout_behavior="@string/appbar_scrolling_view_behavior" />
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_gravity="bottom"
            android:layout_height="wrap_content">
            <TextView
                android:background="@color/list_bg"
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/dp_10"
                android:visibility="gone"
                android:layout_height="10dp" />
            <TextView
                android:background="@color/text_color_99"
                android:layout_width="match_parent"
                android:layout_height="1px" />
            <RelativeLayout
                android:visibility="visible"
                android:layout_gravity="bottom"
                android:layout_width="match_parent"
                android:id="@+id/buy_pop"
                android:background="@color/white"
                android:layout_height="48dp">
                <ImageView
                    android:id="@+id/uticket"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/dp_20"
                    android:layout_centerVertical="true"
                    android:src="@drawable/uticket_w120"/>
                <TextView
                    android:id="@+id/uticket_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textColor="@color/red_dark"
                    android:layout_toRightOf="@+id/uticket"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:text=""/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textColor="@color/black"
                    android:layout_toRightOf="@+id/uticket_num"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dp"
                    android:text="游票/课时"/>
                <ImageView
                    android:id="@+id/course_sign_up"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:textColor="@color/white"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dp"
                    android:scaleType="fitXY"
                    android:adjustViewBounds="true"
                    android:src="@drawable/btn_apply"
                    />
                <ImageView
                    android:id="@+id/chat_entrance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@+id/course_sign_up"
                    android:layout_marginRight="10dp"
                    android:layout_centerVertical="true"
                    android:src="@drawable/chat_entrance"
                    />
                <TextView
                    android:layout_width="1px"
                    android:layout_toLeftOf="@+id/chat_entrance"
                    android:layout_height="match_parent"
                    android:layout_marginTop="2dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="2dp"
                    android:background="@color/tag_bg3"/>
            </RelativeLayout>
        </LinearLayout>

        <include
            layout="@layout/no_net_textview"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="48dp" />

        <include layout="@layout/wait_progressbar" />
    </android.support.design.widget.CoordinatorLayout>
</com.bolooo.studyhomeparents.views.MySwipeRefreshlayout>