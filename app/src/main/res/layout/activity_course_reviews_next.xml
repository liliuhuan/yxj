<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/list_bg">
  <include layout="@layout/bar_layout"
      android:id="@+id/title_lay"/>
  <ScrollView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_below="@+id/title_lay"
      android:scrollbars="none">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingLeft="@dimen/sp_16"
        android:paddingRight="@dimen/sp_16"
        android:orientation="vertical">
      <RelativeLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:background="@drawable/bottom_border_bg"
          android:paddingLeft="@dimen/sp_16"
          android:paddingRight="@dimen/sp_16"
          android:paddingTop="@dimen/point"
          android:paddingBottom="@dimen/point">
        <ImageView
            android:id="@+id/lessions_headimg_iv"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:src="@drawable/noavatar"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/lessions_headimg_iv"
            android:paddingLeft="@dimen/sp_16"
            android:paddingRight="@dimen/sp_16"
            android:layout_centerVertical="true"
            android:orientation="vertical">
          <TextView
              android:id="@+id/lessions_name_tv"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:textSize="14sp"
              android:textColor="@color/text_color_33"/>
          <TextView
              android:id="@+id/lessions_coursename_tv"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginTop="2dp"
              android:textSize="16sp"
              android:textColor="@color/text_color_33"/>
        </LinearLayout>

      </RelativeLayout>
      <RelativeLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:paddingTop="16dp"
          android:paddingBottom="16dp">
        <ImageView
            android:id="@+id/input_icon_iv"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/comment_write"
            android:layout_alignParentRight="true"/>
        <EditText
            android:id="@+id/reviews_input_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:layout_toLeftOf="@+id/input_icon_iv"
            android:minLines="7"
            android:gravity="top"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:hint="@string/reviews_input_hint_txt"
            android:textColor="@color/text_color_33"
            android:textSize="@dimen/sp_14"/>
      </RelativeLayout>
      <TextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:textColor="@color/text_color_99"
          android:textSize="@dimen/sp_12"
          android:text="@string/share_photo_title_txt"/>
      <com.bolooo.studyhomeparents.views.MyGridView
          android:id="@+id/photo_grid_gv"
          android:layout_width="fill_parent"
          android:layout_height="fill_parent"
          android:layout_marginTop="8dp"
          android:horizontalSpacing="8dp"
          android:verticalSpacing="8dp"
          android:numColumns="3"/>
      <Button
          android:id="@+id/finish_bt"
          android:layout_width="match_parent"
          android:layout_height="45dp"
          android:layout_marginTop="24dp"
          android:layout_marginBottom="24dp"
          android:background="@drawable/rectangle_round_corner6_orange"
          android:textColor="@color/white"
          android:textSize="@dimen/btn_text_size"
          android:text="@string/finish_txt"/>
    </LinearLayout>
  </ScrollView>
  <include layout="@layout/wait_progressbar"/>

</RelativeLayout>