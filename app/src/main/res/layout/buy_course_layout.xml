<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginLeft="20dp"
        android:id="@+id/buy_pop"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/uticket"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/uticket_w120"/>
        <TextView
            android:id="@+id/uticket_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="@color/red_dark"
            android:layout_toRightOf="@+id/uticket"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:text=""/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:layout_toRightOf="@+id/uticket_num"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:text="游票/课时"/>
        <ImageView
            android:id="@+id/course_sign_up"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:layout_alignParentRight="true"
            android:textColor="@color/white"
            android:paddingRight="30dp"
            android:paddingLeft="30dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:layout_marginRight="10dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/gray"
        android:paddingTop="@dimen/dp_10"
        android:paddingBottom="@dimen/dp_10"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"/>
</LinearLayout>