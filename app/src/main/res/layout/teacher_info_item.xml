<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <FrameLayout
        android:id="@+id/fl_layout"
        android:layout_width="match_parent"
        android:background="@color/tab_bg"
        android:padding="20dp"
        android:minHeight="150dp"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/ll_verify"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:padding="16dp"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/image_IsNameVerified"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:src="@drawable/verify_01"/>
            <ImageView
                android:id="@+id/image_IsSiteVerified"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:src="@drawable/verify_02"/>
            <ImageView
                android:id="@+id/image_IsProfessionVerified"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:src="@drawable/verify_03"/>
        </LinearLayout>
    </FrameLayout>
    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_below="@+id/fl_layout"
        android:layout_margin="@dimen/dp_20"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="8dp">
        <fm.jiecao.jcvideoplayer_lib.JCVideoPlayerStandard
            android:id="@+id/videoplayer"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="180dp"></fm.jiecao.jcvideoplayer_lib.JCVideoPlayerStandard>
        <ImageView
            android:id="@+id/image_action"
            android:layout_width="wrap_content"
            android:visibility="gone"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:src="@drawable/video_play"/>
    </android.support.v7.widget.CardView>

    <LinearLayout
        android:id="@+id/ll_teacher_all_info2"
        android:orientation="vertical"
        android:layout_below="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/ll_pictures"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="相册"
                />
            <View
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_gravity="center_vertical"
                android:background="@color/gray"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_images"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:padding="@dimen/dp_10"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:layout_height="wrap_content">
            <com.bolooo.studyhomeparents.views.MyGridView
                android:id="@+id/image_gridview"
                android:layout_weight="1"
                android:numColumns="4"
                android:listSelector="#00000000"
                android:horizontalSpacing="@dimen/dp_10"
                android:layout_width="match_parent"
                android:layout_height="match_parent"></com.bolooo.studyhomeparents.views.MyGridView>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_selfIntroduction"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="自我介绍"
                />
            <View
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_gravity="center_vertical"
                android:background="@color/gray"/>
        </LinearLayout>

        <TextView
            android:layout_marginLeft="20dp"
            android:layout_width="match_parent"
            android:layout_marginTop="20dp"
            android:background="@color/transparency"
            android:layout_marginRight="@dimen/dp_20"
            android:layout_height="wrap_content"
            android:lineSpacingExtra="3dp"
            android:textColor="@color/text_color_55"
            android:id="@+id/self_introduction" />

        <LinearLayout
            android:id="@+id/ll_teacherResumes"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="履历"
                />
            <View
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_gravity="center_vertical"
                android:background="@color/gray"/>
        </LinearLayout>
        <com.bolooo.studyhomeparents.views.MyListView
            android:id="@+id/teacher_record"
            android:layout_width="match_parent"
            android:paddingLeft="20dp"
            android:dividerHeight="0dp"
            android:divider="@android:color/transparent"
            android:cacheColorHint="@color/white"
            android:layout_height="wrap_content">
        </com.bolooo.studyhomeparents.views.MyListView>
        <LinearLayout
            android:id="@+id/ll_article"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="我的文章"
                />
            <View
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_gravity="center_vertical"
                android:background="@color/gray"/>
        </LinearLayout>
        <com.bolooo.studyhomeparents.views.MyListView
            android:id="@+id/my_article"
            android:layout_width="wrap_content"
            android:paddingLeft="20dp"
            android:dividerHeight="0dp"
            android:divider="@android:color/transparent"
            android:cacheColorHint="@color/white"
            android:layout_height="wrap_content">
        </com.bolooo.studyhomeparents.views.MyListView>
    </LinearLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_below="@+id/card_view"
        android:layout_marginTop="20dp"
        android:background="@color/transparency"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/empty_image"
            android:layout_width="wrap_content"
            android:visibility="visible"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:src="@drawable/empty_img"/>
    </FrameLayout>
</RelativeLayout>