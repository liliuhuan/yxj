<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:padding="@dimen/dp_8"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/tv_class_name"
        android:text=""
        android:drawableLeft="@drawable/bar_bg_line_cc"
        android:drawablePadding="@dimen/dp_4"
        android:textSize="@dimen/sp_16"
        android:textStyle="bold"
        android:layout_marginLeft="@dimen/dp_8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/tv_class_start_time"
        android:layout_width="wrap_content"
        android:text=""
        android:layout_marginLeft="@dimen/dp_8"
        android:layout_below="@+id/tv_class_name"
        android:textSize="@dimen/sp_14"
        android:layout_marginTop="@dimen/dp_10"
        android:textColor="@color/text_color_99"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/dp_8"
        android:layout_centerVertical="true"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_free_buy_course"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="@dimen/dp_90"
            android:gravity="center"
            android:textSize="@dimen/sp_16"
            android:textColor="@color/white"
            android:paddingLeft="@dimen/dp_16"
            android:paddingRight="@dimen/dp_16"
            android:paddingTop="@dimen/dp_8"
            android:paddingBottom="@dimen/dp_8"
            android:background="@drawable/new_rectangle_solid_bgcolor_orange_corner6_transparency"
            android:text="@string/text_sign_up"/>
        <TextView
            android:id="@+id/tv_remian_number"
            android:layout_marginTop="@dimen/dp_8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_14"
            android:layout_gravity="center_horizontal"
            android:text="剩余 1 个名额"/>
    </LinearLayout>

</RelativeLayout>