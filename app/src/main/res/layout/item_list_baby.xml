<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/rectangle_round_corner8_white"
    android:padding="16dp">
  <FrameLayout
      android:layout_marginTop="@dimen/dp_20"
      android:layout_gravity="center_horizontal"
      android:layout_width="90dp"
      android:layout_height="90dp">
    <ImageView
        android:id="@+id/baby_headimg_iv"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dp_16"
        android:src="@drawable/noavatar"
        />
    <ImageView
        android:id="@+id/child_vip_avtar"
        android:layout_width="40dp"
        android:layout_height="24dp"
        android:layout_gravity="top|center_horizontal"
        android:src="@drawable/child_vipcrown"/>
  </FrameLayout>

  <TextView
      android:id="@+id/baby_info_tv"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_gravity="center_horizontal"
      android:layout_marginTop="24dp"
      android:layout_marginBottom="24dp"
      android:textColor="@color/text_color_33"
      android:textSize="16sp"/>
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal">
    <TextView
        android:id="@+id/baby_life_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:drawableTop="@drawable/child_type03"
        android:drawablePadding="8dp"
        android:gravity="center_horizontal"
        android:textColor="@color/text_color_33"
        android:textSize="18sp"
        android:text="@string/tag_default_value"/>
    <TextView
        android:id="@+id/baby_study_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:drawableTop="@drawable/child_type02"
        android:drawablePadding="8dp"
        android:gravity="center_horizontal"
        android:textColor="@color/text_color_33"
        android:textSize="18sp"
        android:text="@string/tag_default_value"/>

    <TextView
        android:id="@+id/baby_interest_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:drawableTop="@drawable/child_type01"
        android:drawablePadding="8dp"
        android:gravity="center_horizontal"
        android:textColor="@color/text_color_33"
        android:textSize="18sp"
        android:text="@string/tag_default_value"/>
  </LinearLayout>
</LinearLayout>