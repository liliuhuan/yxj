<?xml version="1.0" encoding="utf-8"?>
<com.bolooo.studyhomeparents.views.VerticalSwipeRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/swipe_refresh_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
  <android.support.design.widget.CoordinatorLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      >

    <android.support.v4.view.ViewPager
        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        />
    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true"
        android:theme="@style/AppTheme.AppBarOverlay"
        >
      <!--app:layout_scrollFlags="scroll|enterAlways"-->

      <android.support.design.widget.CollapsingToolbarLayout
          android:id="@+id/collapsingToolbar"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          app:contentScrim="@color/bg_color"
          app:layout_scrollFlags="scroll|exitUntilCollapsed"
          >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fitsSystemWindows="true"
            android:orientation="vertical"
            android:scaleType="centerInside"
            >
          <RelativeLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@drawable/gradient_main"
              android:paddingLeft="32dp"
              android:paddingRight="32dp"
              >
            <com.bolooo.studyhomeparents.utils.CircleImageView
                android:id="@+id/mine_headimg_iv"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/noavatar"
                android:scaleType="centerCrop"
                android:layout_centerVertical="true"
                />
            <LinearLayout
                android:id="@+id/mine_money_ll"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:orientation="vertical"
                >
              <TextView
                  android:id="@+id/mine_youticket_tv"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_marginTop="25dp"
                  android:background="@drawable/rectangle_round_corner16_white"
                  android:drawableLeft="@drawable/uticket_small"
                  android:drawablePadding="8dp"
                  android:gravity="center_vertical"
                  android:paddingBottom="3dp"
                  android:paddingLeft="8dp"
                  android:paddingRight="8dp"
                  android:paddingTop="3dp"
                  android:textColor="@color/bg_color"
                  android:textSize="16sp"
                  />
              <TextView
                  android:id="@+id/mine_point_tv"
                  android:layout_width="wrap_content"
                  android:layout_height="25dp"
                  android:layout_gravity="center_horizontal"
                  android:gravity="center_vertical"
                  android:includeFontPadding="false"
                  android:textColor="@color/white"
                  android:textSize="12sp"
                  />
            </LinearLayout>

            <TextView
                android:id="@+id/mine_username_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:layout_toLeftOf="@+id/mine_money_ll"
                android:layout_toRightOf="@+id/mine_headimg_iv"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:textColor="@color/white"
                android:textSize="16sp"
                />
            <ImageView
                android:id="@+id/image_vip"
                android:layout_below="@id/mine_username_tv"
                android:layout_toRightOf="@+id/mine_headimg_iv"
                android:src="@drawable/homevip_no"
                android:layout_width="wrap_content"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:paddingTop="8dp"
                android:visibility="gone"
                android:layout_height="wrap_content" />
          </RelativeLayout>

          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal"
              >
            <TextView
                android:id="@+id/mine_focus_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableTop="@drawable/homeicon_like"
                android:text="@string/mine_focus"
                style="@style/mine_function_style"
                />
            <View
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="16dp"
                android:layout_marginTop="16dp"
                android:background="@color/gray_ee"
                />
            <TextView
                android:id="@+id/mine_dotey_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableTop="@drawable/homeicon_baby"
                android:text="@string/mine_dotey"
                style="@style/mine_function_style"
                />
            <View
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="16dp"
                android:layout_marginTop="16dp"
                android:background="@color/gray_ee"
                />
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">
              <TextView
                  android:id="@+id/mine_notification_tv"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:drawableTop="@drawable/homeicon_order"
                  android:text="@string/order_text"
                  style="@style/mine_function_style"
                  />
              <TextView
                  android:id="@+id/tv_unread"
                  android:layout_width="12dp"
                  android:layout_height="12dp"
                  android:text=""
                  android:visibility="gone"
                  android:textColor="@color/white"
                  android:layout_marginTop="10dp"
                  android:gravity="center"
                  android:textSize="8dp"
                  android:layout_marginRight="@dimen/dp_20"
                  android:layout_gravity="right"
                  android:layout_toRightOf="@+id/mine_notification_tv"
                  android:background="@drawable/circle_red_message"
                  />
            </FrameLayout>

            <View
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="16dp"
                android:layout_marginTop="16dp"
                android:background="@color/gray_ee"
                />
            <TextView
                android:id="@+id/mine_setting_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableTop="@drawable/homeicon_setting"
                android:text="@string/user_info_text"
                style="@style/mine_function_style"
                />
          </LinearLayout>

        </LinearLayout>

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="71dp"
            android:background="@color/transparency"
            android:gravity="center_vertical"
            app:contentInsetLeft="0dp"
            app:contentInsetStart="0dp"
            app:layout_collapseMode="pin"
            app:popupTheme="@style/AppTheme.PopupOverlay"
            app:theme="@style/ToolbarTheme"
            >
          <RelativeLayout
              android:layout_width="match_parent"
              android:layout_height="48dp"
              android:layout_marginTop="23dp"
              >
            <TextView
                android:id="@+id/mine_title_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="标题"
                android:textColor="@color/white"
                android:textSize="16sp"
                />
            <ImageView
                android:id="@+id/mine_smail_headimg_iv"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="16dp"
                android:src="@drawable/noavatar"
                />
          </RelativeLayout>
        </android.support.v7.widget.Toolbar>
      </android.support.design.widget.CollapsingToolbarLayout>
      <View
          android:layout_width="match_parent"
          android:layout_height="0.5dp"
          android:background="@color/gray_ee"
          ></View>

      <android.support.design.widget.TabLayout
          android:id="@+id/tabLayout"
          android:layout_width="match_parent"
          android:layout_height="45dp"
          app:tabIndicatorColor="@color/bg_color"
          app:tabIndicatorHeight="3dp"
          app:tabSelectedTextColor="#4D4D4D"
          app:tabTextColor="#A7A7A7"
          />

    </android.support.design.widget.AppBarLayout>

    <include layout="@layout/no_net_textview"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="48dp"
        />

    <include layout="@layout/wait_progressbar"/>
  </android.support.design.widget.CoordinatorLayout>

</com.bolooo.studyhomeparents.views.VerticalSwipeRefreshLayout>