<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_private_letter"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.bolooo.studyhomeparents.activty.chat.PrivateLetterActivity">
    <include layout="@layout/bar_layout"/>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:background="@color/list_bg"
            android:layout_height="wrap_content">
            <LinearLayout
                android:id="@+id/ll_teacher_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/dp_16"
                android:background="@color/white"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/teacher_headimg_iv"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/noavatar"
                    />
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:layout_gravity="center_vertical"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:id="@+id/teacher_info_lay"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:paddingLeft="16dp"
                        android:orientation="horizontal"
                        android:gravity="center_horizontal">
                        <TextView
                            android:id="@+id/teacher_name_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="17sp"
                            android:text=""
                            android:layout_gravity="center_vertical"
                            android:textColor="@color/text_color_33"/>
                        <TextView
                            android:id="@+id/teacher_jobs_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="10sp"
                            android:paddingLeft="@dimen/dp_10"
                            android:paddingRight="@dimen/dp_10"
                            android:paddingTop="2dp"
                            android:paddingBottom="2dp"
                            android:text=""
                            android:layout_gravity="center_vertical"
                            android:background="@drawable/teacher_score_shape"
                            android:layout_marginLeft="@dimen/dp_10"
                            android:textColor="@color/white"/>
                    </LinearLayout>
                    <TextView
                        android:id="@+id/teacher_latest_curriculum_tv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:paddingTop="8dp"
                        android:textSize="12sp"
                        android:text=""
                        android:paddingLeft="16dp"
                        android:textColor="@color/text_color_99"/>
                </LinearLayout>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/new_goin"/>
            </LinearLayout>
            <com.example.xrecyclerview.XRecyclerView
                android:id="@+id/xrlistview"
                android:layout_marginTop="1dp"
                android:background="@color/list_bg"
                android:layout_below="@+id/ll_teacher_info"
                android:layout_above="@+id/ll_send_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"></com.example.xrecyclerview.XRecyclerView>
            <LinearLayout
                android:id="@+id/ll_send_layout"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:background="@color/white"
                android:padding="@dimen/dp_8"
                android:layout_alignParentBottom="true"
                android:layout_height="wrap_content">

                <EditText
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:background="@drawable/chat_edit_shape"
                    android:padding="@dimen/dp_8"
                    android:hint="@string/plase_edit"
                    android:layout_gravity="center_vertical"
                    android:textSize="@dimen/sp_14"
                    android:maxHeight="100dp"
                    android:maxLength="500"
                    android:layout_height="wrap_content"
                    android:id="@+id/editText" />

                <TextView
                    android:id="@+id/btn_send"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/signup_shape"
                    android:textSize="@dimen/sp_16"
                    android:textColor="@color/white"
                    android:layout_marginLeft="@dimen/dp_8"
                    android:paddingRight="@dimen/dp_16"
                    android:paddingLeft="@dimen/dp_16"
                    android:paddingTop="@dimen/dp_4"
                    android:layout_gravity="center_vertical"
                    android:paddingBottom="@dimen/dp_4"
                    android:text="发送"/>
            </LinearLayout>
        </RelativeLayout>
        <include layout="@layout/wait_progressbar"/>
    </FrameLayout>

</LinearLayout>
