<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/list_bg">
  <include layout="@layout/bar_layout"
      android:id="@+id/title_lay"/>
  <ScrollView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_below="@+id/title_lay"
      android:scrollbars="none">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="20dp"
        android:orientation="vertical">
      <ImageView
          android:id="@+id/iv_vip_ad"
          android:layout_width="match_parent"
          android:layout_height="@dimen/dp_100"
          android:scaleType="fitXY"
          android:adjustViewBounds="true"
          android:src="@drawable/noimage"
          />
      <LinearLayout
          android:orientation="horizontal"
          android:layout_width="match_parent"
          android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/uticket_num_lay"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:background="@drawable/bottom_border_bg"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:paddingBottom="@dimen/dp_16"
            android:paddingLeft="8dp"
            android:paddingTop="16dp"
            android:paddingRight="16dp">
          <LinearLayout
              android:layout_width="match_parent"
              android:orientation="horizontal"
              android:layout_height="wrap_content">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/uticket_small"
                android:text="我的游票"
                android:drawablePadding="8dp"
                android:paddingLeft="8dp"
                android:gravity="center_vertical"
                android:textColor="@color/text_color_99"
                android:textSize="14sp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_14"
                android:paddingTop="1dp"
                android:paddingBottom="1dp"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:textColor="@color/bg_color"
                android:background="@drawable/search_shape"
                android:text="明细"/>
          </LinearLayout>
          <TextView
              android:id="@+id/uticket_num_tv"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginTop="@dimen/dp_10"
              android:text="0"
              android:gravity="center_horizontal"
              android:textColor="@color/bg_color"
              android:textSize="24dp" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/point_lay"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:background="@drawable/bottom_border_bg"
            android:paddingTop="16dp"
            android:gravity="center_vertical"
            android:paddingLeft="8dp"
            android:paddingBottom="@dimen/dp_16"
            android:layout_marginLeft="1dp"
            android:orientation="vertical"
            android:paddingRight="16dp">
          <LinearLayout
              android:layout_width="match_parent"
              android:orientation="horizontal"
              android:layout_height="wrap_content">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/integral_coin"
                android:text="我的积分"
                android:drawablePadding="8dp"
                android:paddingLeft="8dp"
                android:gravity="center_vertical"
                android:textColor="@color/text_color_99"
                android:textSize="14sp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_14"
                android:paddingTop="1dp"
                android:paddingBottom="1dp"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:textColor="@color/bg_color"
                android:background="@drawable/search_shape"
                android:text="兑换"/>
          </LinearLayout>
          <TextView
              android:id="@+id/point_tv"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:text="0"
              android:layout_marginTop="@dimen/dp_10"
              android:gravity="center_horizontal"
              android:textColor="@color/bg_color"
              android:textSize="24dp"
              />

        </LinearLayout>
      </LinearLayout>
      <TextView
          android:layout_width="match_parent"
          android:layout_height="48dp"
          android:text="@string/unticket_buy"
          android:layout_marginTop="@dimen/dp_10"
          android:background="@color/white"
          android:gravity="center"/>
      <com.bolooo.studyhomeparents.views.MyGridView
          android:layout_marginTop="1dp"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:cacheColorHint="@color/transparency"
          android:numColumns="2"
          android:verticalSpacing="1dp"
          android:horizontalSpacing="1dp"
          android:id="@+id/uticket_grid_gv">
      </com.bolooo.studyhomeparents.views.MyGridView>
    </LinearLayout>
  </ScrollView>

  <include layout="@layout/wait_progressbar" />
</RelativeLayout>