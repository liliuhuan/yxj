<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
  <TextView
      android:id="@+id/uticket_record_order_sn_tv"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:background="@drawable/two_border_bg"
      android:padding="16dp"
      android:textSize="14sp"
      android:textColor="@color/text_color_33"/>
  <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:background="@drawable/bottom_border_bg"
      android:padding="16dp">
    <ImageView
        android:id="@+id/uticket_record_img_iv"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_centerVertical="true"
        android:scaleType="centerCrop"
        android:src="@drawable/noimage"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/uticket_record_img_iv"
        android:layout_centerVertical="true"
        android:orientation="vertical">
      <TextView
          android:id="@+id/uticket_record_num_tv"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:textSize="16sp"
          android:textColor="@color/text_color_33"/>
      <TextView
          android:id="@+id/uticket_record_original_price_tv"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:textSize="16sp"
          android:textColor="@color/text_color_33"/>
    </LinearLayout>

  </RelativeLayout>
  <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content">
    <LinearLayout
        android:id="@+id/ll_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:background="@drawable/bottom_border_bg"
        android:padding="16dp"
        android:orientation="vertical">
      <TextView
          android:id="@+id/uticket_record_creattime_tv"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:textSize="14sp"
          android:textColor="@color/text_color_99"/>
      <TextView
          android:id="@+id/uticket_record_num"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:textSize="14sp"
          android:textColor="@color/text_color_99"/>
      <TextView
          android:id="@+id/uticket_record_price_tv"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:textSize="14sp"
          android:textColor="@color/text_color_99"/>
    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:textSize="@dimen/sp_14"
        android:background="@drawable/rectangle_solid_white_corner0_black"
        android:layout_alignParentRight="true"
        android:padding="@dimen/dp_4"
        android:layout_marginRight="@dimen/dp_20"
        android:textColor="@color/text_color_99"
        android:text="购买完成"/>
  </RelativeLayout>

</LinearLayout>