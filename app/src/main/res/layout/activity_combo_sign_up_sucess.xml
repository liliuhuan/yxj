<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_combo_sign_up_sucess"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context="com.bolooo.studyhomeparents.activty.adver.ComboSignUpSucessActivity">
    <include layout="@layout/bar_layout"/>
    <ScrollView
        android:scrollbars="none"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RelativeLayout
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:background="@color/white"
                android:padding="@dimen/dp_16"
                android:layout_marginTop="@dimen/dp_30"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/ok_icon"
                    android:layout_centerVertical="true"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:src="@drawable/inlineicon_checked"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:padding="10dp"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_below="@+id/tvtv"
                    android:layout_toRightOf="@+id/ok_icon"
                    android:gravity="center_horizontal"
                    android:visibility="gone"
                    android:text="当老师审核确认后,您会收到通知!"/>
                <TextView
                    android:id="@+id/tvtv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:padding="10dp"
                    android:layout_toRightOf="@+id/ok_icon"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:gravity="center_horizontal"
                    android:text="恭喜,您抢到了本次活动的名额!"/>

            </RelativeLayout>

            <LinearLayout
                android:layout_marginTop="@dimen/dp_40"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/dp_20"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/back_main"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="返回首页"
                    android:layout_weight="1"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center"
                    android:textSize="@dimen/sp_16"
                    android:paddingLeft="@dimen/dp_22"
                    android:paddingTop="@dimen/dp_10"
                    android:paddingBottom="@dimen/dp_10"
                    android:paddingRight="@dimen/dp_20"
                    android:layout_marginLeft="@dimen/dp_16"
                    android:layout_marginRight="@dimen/dp_22"
                    android:textColor="@color/white"
                    android:background="@drawable/rectangle_round_corner6_orange"/>
                <TextView
                    android:id="@+id/check_detail"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="查看我的课程"
                    android:layout_marginRight="@dimen/dp_16"
                    android:textSize="@dimen/sp_16"
                    android:paddingLeft="@dimen/dp_22"
                    android:paddingTop="@dimen/dp_10"
                    android:paddingBottom="@dimen/dp_10"
                    android:paddingRight="@dimen/dp_22"
                    android:textColor="@color/white"
                    android:background="@drawable/rectangle_round_corner6_orange"/>
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="8dp"
                android:background="@color/list_bg"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:padding="8dp"
                android:background="@color/white"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/combo_image"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginLeft="20dp"
                    android:src="@drawable/noavatar"/>
                <TextView
                    android:id="@+id/combo_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/combo_image"
                    android:layout_marginLeft="8dp"
                    android:textSize="@dimen/sp_18"
                    android:textStyle="bold"
                    android:layout_centerVertical="true"
                    android:textColor="@color/text_color_55"
                    android:gravity="center_vertical"/>
            </RelativeLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/list_bg"/>
            <TextView
                android:text="@string/contain_course"
                android:layout_width="match_parent"
                android:gravity="center_horizontal"
                android:padding="10dp"
                android:layout_marginTop="1dp"
                android:textColor="@color/text_color_77"
                android:background="@color/white"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/list_bg"/>
            <LinearLayout
                android:id="@+id/ll_contait_course"
                android:layout_width="match_parent"
                android:minHeight="60dp"
                android:padding="8dp"
                android:layout_marginTop="1dp"
                android:background="@color/white"
                android:orientation="vertical"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
