<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:padding="10dp"
    android:background="@color/white"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/teacher_photo"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        android:src="@drawable/noavatar"/>
    <TextView
        android:id="@+id/teacher_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/teacher_photo"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="@dimen/dp_4"
        android:textColor="@color/text_color_55"
        android:textSize="@dimen/sp_14"
        android:text=""/>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_toRightOf="@+id/teacher_photo"
        android:layout_below="@+id/teacher_name"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="@dimen/dp_4"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/teacher_course_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_16"
            android:textColor="@color/text_color_55"
            android:text=""/>
        <TextView
            android:id="@+id/teacher_course_des"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_16"
            android:layout_toRightOf="@+id/teacher_course_name"
            android:textColor="@color/text_color_55"
            android:text=""/>
    </RelativeLayout>

</RelativeLayout>